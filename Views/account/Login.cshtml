@model hypster_tv.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}



<div style=" float:left; width:298px; min-height:140px; background-color:#565656; border:2px solid #555555; border-radius:2px; text-align:right; margin-left:13px; ">
    
     <div style=" float:right; margin-right:10px; line-height:30px;">
     @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
         
        <text><span style=" font-size:16px;">Sing in to Hypster.com</span></text><br />

        
        @Html.TextBoxFor(m => m.UserName, new { @class = "txtLogin" })<br />

        @Html.PasswordFor(m => m.Password, new { @class = "txtLogin" })<br />

         
        @Html.CheckBoxFor(m => m.RememberMe) 
        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
        <input type="submit" value="Log in" style=" width:145px; height:25px;" />
        
        @Html.ValidationSummary(true, "", new { @class = "txtValidator" })
    }
    </div>

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
